@import "./node_modules/nib"

$green = #73cb00

html
  background: #ccc
  font: 14px "Helvetica Neue", sans-serif

body
  margin: 0

  > .field
    background: $green
    height: 50%
    left: 0
    position: fixed
    top: 0
    right: 0

#app
  position: relative

  > header
    background: #333
    color: #fff

    nav
      margin: 0 auto
      width: 830px

      ul
        margin: 0
        padding: 0

        li
          display: inline-block

          a
            color: inherit
            display: block
            padding: 10px 20px
            text-decoration: inherit

  > .main
    margin: 0 auto
    width: 830px

    .page
      margin: 60px 0
      background: #f9f9f9
      box-shadow: 0 1px 2px rgba(#000, 0.3)
      overflow: hidden
      position: relative

      &.content
        padding: 30px 60px 60px

.classifier
  .subject-container
    border-bottom: 1px solid #e9e9e9
    padding: 15px

    .subject
      display: block

  .step
    border-top: 1px solid #fff
    padding: 15px 15px 20px

    .info
      margin: 0 45px
      position: relative

      .number
        color: $green
        font-size: 44px
        line-height: 1
        position: absolute
        right: 100%
        text-align: center
        top: 0
        width: 40px

      .text
        font-size: 22px

      .instruction
        font-size: 13px
        color: #999

  .controls
    bottom: 0
    padding: 15px 15px 20px
    position: absolute
    right: 0
